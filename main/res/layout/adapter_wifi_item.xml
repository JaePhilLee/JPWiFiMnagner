<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ITEM_PARENT"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">
    <TextView
        android:id="@+id/TEXT_VIEW_SSID"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="SSID"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/TEXT_VIEW_RSSI"
        />
    <TextView
        android:id="@+id/TEXT_VIEW_RSSI"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="RSSI"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/TEXT_VIEW_SSID"
        app:layout_constraintEnd_toStartOf="@id/TEXT_VIEW_TYPE"
        />
    <TextView
        android:id="@+id/TEXT_VIEW_TYPE"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="Type"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/TEXT_VIEW_RSSI"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <View
        android:id="@+id/DIVIDER_03"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#55000000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toBottomOf="@id/TEXT_VIEW_SSID"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>